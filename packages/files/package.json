{
  "name": "@statelyjs/files",
  "version": "0.4.1",
  "description": "File management plugin for Stately",
  "type": "module",
  "license": "Apache-2.0",
  "author": "George Lee Patterson <patterson.george@gmail.com>",
  "repository": {
    "type": "git",
    "url": "https://github.com/georgeleepatterson/stately.git",
    "directory": "packages/files"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "scripts": {
    "build": "tsdown",
    "check": "tsc --noEmit",
    "dev": "tsdown --watch",
    "codegen": "pnpm run generate:openapi && pnpm run generate:types",
    "generate:openapi": "cargo run -p stately-files --bin stately-files-openapi -- .",
    "generate:types": "pnpm exec stately generate ./openapi.json -o ./src/generated",
    "tarball": "rm statelyjs-files-*.tgz || true && pnpm --filter @statelyjs/files pack"
  },
  "peerDependencies": {
    "@statelyjs/stately": "workspace:*",
    "@statelyjs/ui": "workspace:*",
    "@tanstack/react-query": "^5.90.10",
    "@types/react": "^18.0.0 || ^19.0.0",
    "@types/react-dom": "^18.0.0 || ^19.0.0",
    "lucide-react": "^0.562.0",
    "openapi-fetch": "^0.15",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "sonner": "^2.0.7"
  },
  "dependencies": {
    "class-variance-authority": "^0.7.1"
  },
  "devDependencies": {
    "@statelyjs/stately": "workspace:*",
    "@statelyjs/ui": "workspace:*",
    "@tailwindcss/cli": "^4.1.18",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "lucide-react": "^0.562.0",
    "tailwindcss": "^4.1.18",
    "tsdown": "0.18.1",
    "typescript": "^5.9.3"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs"
    },
    "./styles.css": "./dist/styles.css",
    "./codegen": {
      "types": "./dist/codegen.d.ts",
      "import": "./dist/codegen.mjs"
    },
    "./components": {
      "types": "./dist/components/index.d.ts",
      "import": "./dist/components/index.mjs"
    },
    "./dialogs": {
      "types": "./dist/dialogs/index.d.ts",
      "import": "./dist/dialogs/index.mjs"
    },
    "./fields/edit": {
      "types": "./dist/fields/edit.d.ts",
      "import": "./dist/fields/edit.mjs"
    },
    "./fields/view": {
      "types": "./dist/fields/view.d.ts",
      "import": "./dist/fields/view.mjs"
    },
    "./hooks": {
      "types": "./dist/hooks/index.d.ts",
      "import": "./dist/hooks/index.mjs"
    },
    "./pages": {
      "types": "./dist/pages/index.d.ts",
      "import": "./dist/pages/index.mjs"
    },
    "./types/api": {
      "types": "./dist/types/api.d.ts",
      "import": "./dist/types/api.mjs"
    },
    "./views": {
      "types": "./dist/views/index.d.ts",
      "import": "./dist/views/index.mjs"
    }
  }
}
