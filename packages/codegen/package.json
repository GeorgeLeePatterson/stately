{
  "name": "@stately/codegen",
  "version": "0.3.0",
  "description": "Code generator for Stately schemas from OpenAPI specs",
  "type": "module",
  "bin": {
    "stately-codegen": "./dist/cli.js"
  },
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    }
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "tsc --build",
    "clean": "rm -rf dist .turbo",
    "typecheck": "tsc --noEmit",
    "dev": "tsc --build --watch"
  },
  "keywords": [
    "stately",
    "codegen",
    "openapi",
    "schema"
  ],
  "author": "George Lee Patterson <patterson.george@gmail.com>",
  "license": "Apache-2.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/georgeleepatterson/stately.git",
    "directory": "packages/codegen"
  },
  "dependencies": {
    "@stately/schema": "workspace:*"
  },
  "devDependencies": {
    "@types/node": "^22.10.1",
    "typescript": "^5.7.2"
  }
}
