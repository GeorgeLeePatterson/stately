{
  "name": "tasks",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "check": "pnpm exec tsc --noEmit",
    "preview": "vite preview",
    "generate:openapi": "cd ../ && cargo run --bin demo-tasks-openapi -- . && cd ./ui",
    "codegen": "pnpm run generate:openapi && pnpm exec stately generate ../openapi.json -o ./src/generated",
    "create:user": "curl -X PUT http://localhost:3000/api/v1/entity -H \"Content-Type: application/json\" -d '{\"type\": \"user\", \"data\": {\"name\": \"Alice User\", \"status\": \"Working\"}}'",
    "create:task": "curl -X PUT http://localhost:3000/api/v1/entity -H \"Content-Type: application/json\" -d '{\"type\": \"task\", \"data\": {\"name\": \"My First Task\", \"status\": \"Pending\"}}'"
  },
  "dependencies": {
    "@statelyjs/stately": "^0.5.0",
    "@statelyjs/ui": "^0.5.0",
    "@tanstack/react-query": "^5.90.12",
    "@uiw/codemirror-extensions-langs": "^4.25.4",
    "@uiw/react-codemirror": "^4.25.3",
    "lucide-react": "^0.562.0",
    "openapi-fetch": "^0.15.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "react-router-dom": "^7.11.0",
    "sonner": "^2.0.7"
  },
  "devDependencies": {
    "@tailwindcss/vite": "^4.1.18",
    "@types/node": "^24.10.4",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@vitejs/plugin-react": "^5.1.2",
    "globals": "^16.5.0",
    "tailwindcss": "^4.1.18",
    "typescript": "~5.9.3",
    "vite": "^7.3.0"
  }
}
