{
  "name": "stately-monorepo",
  "version": "0.4.1",
  "private": true,
  "type": "module",
  "packageManager": "pnpm@10.27.0",
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=10.0.0"
  },
  "scripts": {
    "build": "turbo run build",
    "dev": "turbo run dev",
    "test": "turbo run test",
    "lint": "turbo run lint",
    "check": "turbo run check",
    "clean": "turbo run clean && rm -rf node_modules .turbo",
    "docs:api": "typedoc",
    "docs:dev": "pnpm --filter @statelyjs/docs dev",
    "docs:build": "pnpm --filter @statelyjs/docs build",
    "docs:preview": "pnpm --filter @statelyjs/docs preview"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.5",
    "@types/node": "^24.10.4",
    "turbo": "^2.7.2",
    "typedoc": "^0.28.15"
  },
  "pnpm": {
    "overrides": {
      "csstype": "^3.2.3"
    },
    "onlyBuiltDependencies": [
      "@parcel/watcher",
      "core-js"
    ]
  }
}
